<div class="panel panel-primary">
  <div class="panel-heading">
      <h3 class="panel-title">Sign up</h3>
  </div>
<div class="row">
  <div class= "col-md-2"></div>
  <div class= "col-md-8">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

   <div class="panel-body">
   <form class="form-horizontal">
    <fieldset>
    <div class="form-group">
      <div class="col-lg-10">
        <%= f.email_field :email, id: "email", class:"form-control floating-label", placeholder: "Email" %>
      </div>
    </div><br>
    <form class="form-horizontal">
    <div class="form-group">
      <div class="col-lg-10">
         <% if @validatable %>
           <em>(<%= @minimum_password_length %> characters minimum)</em>
         <% end %><br>
        <%= f.password_field :password, id: "password" , autocomplete: "off", class:"form-control floating-label", placeholder: "Password" %>
      </div><br>
    </div><br>
    <form class="form-horizontal">
    <div class="form-group">
      <div class="col-lg-10">
        <%= f.password_field :password_confirmation, id:"password_confirmation", class:"form-control floating-label", placeholder: "Password Re-enter" %>
      </div>
    </div><br>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-success pull-left" %>
  </div>
<% end %>
